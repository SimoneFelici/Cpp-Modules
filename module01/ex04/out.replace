MARIO     := sed
SRCS     := main.cpp
OBJS     := $(SRCS:.cpp=.o)

CXX      := c++
CXXFLAGS := -Wall -Wextra -Werror -std=c++98

all: $(MARIO)

$(MARIO): $(OBJS)
	$(CXX) $(OBJS) -o $@

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(MARIO)

re: fclean all

.PHONY: all clean fclean re
